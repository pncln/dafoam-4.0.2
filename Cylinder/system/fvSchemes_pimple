FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes 
{
    default         Euler;
}

gradSchemes
{
    default         Gauss linear;
    grad(U)         cellLimited Gauss linear 1;
}

divSchemes
{
    default         none;
    
    // Use more dissipative schemes for supersonic
    div(phi,U)      Gauss vanLeer;
    div(phi,e)      Gauss vanLeer;
    div(phi,K)      Gauss vanLeer;
    div(phiv,p)     Gauss vanLeer;
    
    // Turbulence
    div(phi,k)      Gauss upwind;
    div(phi,epsilon) Gauss upwind;
    
    // Stress tensor
    div(((rho*nuEff)*dev2(T(grad(U))))) Gauss linear;
    
    // Preconditioner
    div(pc)         bounded Gauss upwind;
}

interpolationSchemes
{
    default         linear;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

snGradSchemes
{
    default         corrected;
}

wallDist
{
    method          meshWave;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //