FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        tolerance       1e-06;
        relTol          0.01;
        smoother        GaussSeidel;
        nCellsInCoarsestLevel 20;
    }

    pFinal
    {
        $p;
        relTol          0;
    }

    "(U|e|k|epsilon)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-05;
        relTol          0.1;
    }

    "(U|e|k|epsilon)Final"
    {
        $U;
        relTol          0;
    }
    
    Phi
    {
        solver          GAMG;
        tolerance       1e-06;
        relTol          0.01;
        smoother        GaussSeidel;
        nCellsInCoarsestLevel 20;
    }
}

PIMPLE
{
    nOuterCorrectors 1;  // 1 for PISO mode
    nCorrectors      2;
    nNonOrthogonalCorrectors 1;
    
    // Reference for potential flow initialization
    PhiRefCell      0;
    PhiRefValue     0;
    
    // Reference for pressure if needed
    pRefCell        0;
    pRefValue       101325;
}

potentialFlow
{
    nNonOrthogonalCorrectors 10;
    PhiRefCell      0;
    PhiRefValue     0;
}

relaxationFactors
{
    equations
    {
        p               0.3;
        U               0.7;
        e               0.7;
        k               0.7;
        epsilon         0.7;
    }
}

